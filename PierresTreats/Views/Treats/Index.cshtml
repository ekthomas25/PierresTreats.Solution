@{
  Layout = "_Layout";
}
@using PierresTreats.Models

<h2>Pierre's Tasty Treats:</h2>
<hr />

@if(Model.Count == 0)
{
  <p>Pierre currently has no flavors listed.</p>
}
<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<div class="links">
  @Html.ActionLink("Add a New Treat to the Menu", "Create")
</div>