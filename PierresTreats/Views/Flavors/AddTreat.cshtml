@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add Flavor Profile</h2>
<hr />

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <h3>@Html.Label("Select Treat")</h3>
    @Html.DropDownList("TreatId")
  <input type="submit" value="Add Treat" class="btn btn-dark" />
}
<hr />
<div class="links">@Html.ActionLink("Cancel", "Details", new { id = Model.FlavorId })</div>