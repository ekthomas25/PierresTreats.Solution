@{
  Layout = "_Layout";
}
@model PierresTreats.Models.Flavor

<h2>Create New Flavor</h2>
<hr />
@using(Html.BeginForm())
{
  <h3>@Html.LabelFor(model => model.Name, "Name")</h3>
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", required = "required" })

  <h3>@Html.LabelFor(model => model.Type, "Type")</h3>
  @Html.TextBoxFor(model => model.Type, new { @class="form-control", required = "required" })

  <input type="submit" value="Save" class="btn btn-dark" />
}
<hr />
<div class="links">
  @Html.ActionLink("Cancel", "Index")
</div>