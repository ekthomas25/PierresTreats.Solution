@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @Html.LabelFor(user => user.Email)
  @Html.TextBoxFor(user => user.Email, new { @class="form-control", required = "required" })

  @Html.LabelFor(user => user.Password)
  @Html.TextBoxFor(user => user.Password, new { @class="form-control", required = "required" })

  @Html.LabelFor(user => user.ConfirmPassword)
  @Html.TextBoxFor(user => user.ConfirmPassword, new { @class="form-control", required = "required" })

  <input type="submit" value="Register" class="btn btn-dark" />
}